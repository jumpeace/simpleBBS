<link rel="stylesheet" href="/style/reply/main.css" />
<div id="container" data-post-id=<%= @post['id'] %>>

    <!-- リンクとタイトルゾーン -->
    <div id="header">
        <a class="previous-link" href="/post/">
            <span class="material-icons">arrow_back</span>
        </a>
        <div class="title">返信</div>
    </div>

    <!-- 投稿の表示ゾーン -->
    <div id="post">
        <!-- メッセージ -->
        <div class="message"><%= @post['message'] %></div>
        <div class="bottom-container">
            <!-- いいね数 -->
            <div class="heart">
                <span class="material-icons">favorite_border</span>
                <span class="count"><%= @post['heart'] %></span>
            </div>
            <!-- 削除フォーム -->
            <div>
                <form class="delete" method="post" action="/api/post/<%= @post['id'] %>/delete/">
                    <button class="material-icons">delete</button>
                </form>
            </div>
            <!-- 書き込み時間 -->
            <div class="write-time"><%= @post['write_time'] %></div>
        </div>
    </div>

    <!-- 返信を作成するフォーム -->
    <div id="create-reply"></div>

    <!-- 投稿に対する返信の一覧を表示するゾーン -->
    <div id="replies"></div>
</div>
<script src="/ajax/reply.js"></script>
